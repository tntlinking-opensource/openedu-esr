<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.pfw.framework.ywmk.domain.Xxxx" table="t_ywmk_xxxx">
		<comment>学校信息</comment>
		<id name="id" type="java.lang.String">
			<column name="ID" length="32" />
			<generator class="uuid.hex" />
		</id>
		<property name="xxmc" type="java.lang.String">
			<column name="xxmc" length="100">
				<comment>学校名称</comment>
			</column>
		</property>
		<property name="xxlxmc" type="java.lang.String">
			<column name="xxlxmc" length="500">
				<comment>学校类型名称以,逗号隔开</comment>
			</column>
		</property>
		<property name="bz" type="java.lang.String">
			<column name="bz" length="100">
				<comment>备注</comment>
			</column>
		</property>
		<property name="bxlxid" type="java.lang.String">
			<column name="bxlxid" length="100">
				<comment>办学类型id</comment>
			</column>
		</property>
		<property name="xxdm" type="java.lang.String">
			<column name="xxdm" length="50">
				<comment>学校代码</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>