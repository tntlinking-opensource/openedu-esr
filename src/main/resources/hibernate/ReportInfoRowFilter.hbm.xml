<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.pfw.framework.ywmk.domain.ReportInfoRowFilter" table="T_Config_ReportInfoRowFilter">
        <comment>报表行过滤配置</comment>
        
        <id name="id" type="java.lang.String">
            <column name="ID" length="32" />
            <generator class="uuid.hex" />
        </id>
        
        <many-to-one name="reportinfo" class="org.pfw.framework.ywmk.domain.ReportInfo" fetch="select">
            <column name="reportId" length="32"  >
            	<comment>所属报表</comment>
            </column>
        </many-to-one>
        
        <many-to-one name="ssbxlx" class="org.pfw.framework.xtgl.domain.Dict" fetch="select">
            <column name="ssbxlx" length="32"  >
            	<comment>办学类型</comment>
            </column>
        </many-to-one>
        
        <property name="hanghs" type="java.lang.String">
            <column name="hanghs" length="300">
                <comment>行号 多行以,号分隔</comment>
            </column>
        </property>
        
        <property name="bz" type="java.lang.String">
            <column name="bz" length="200">
                <comment>备注</comment>
            </column>
        </property>
        
    </class>
</hibernate-mapping>
