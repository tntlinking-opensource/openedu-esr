<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.pfw.framework.ywmk.domain.Bjxx" table="t_ywmk_Bjxx">
		<comment>班级信息</comment>
		<id name="id" type="java.lang.String">
			<column name="ID" length="32" />
			<generator class="uuid.hex" />
		</id>
		<many-to-one name="ssxq" class="org.pfw.framework.ywmk.domain.Xxxq">
			<column name="ssxq" length="32">
				<comment>所属校区</comment>
			</column>
		</many-to-one>
		<property name="bjdm" type="java.lang.String">
			<column name="bjdm" length="50">
				<comment>班级代码</comment>
			</column>
		</property>
		<property name="bjmc" type="java.lang.String">
			<column name="bjmc" length="50">
				<comment>班级名称</comment>
			</column>
		</property>
		<property name="nianj" type="java.lang.String">
			<column name="nianj" length="10">
				<comment>年级</comment>
			</column>
		</property>
		<many-to-one name="yjkblx" class="org.pfw.framework.xtgl.domain.Dict">
			<column name="yjkblx" length="32">
				<comment>幼教-开班类型</comment>
			</column>
		</many-to-one>
		<property name="xjsffsb" type="java.lang.String">
			<column name="xjsffsb" length="1">
				<comment>小学-是否复式班--0:是,1:不是</comment>
			</column>
		</property>
		
		<property name="xued" type="java.lang.String">
			<column name="xued" length="1">
				<comment>学段  1：小学    2：初中   3：高中</comment>
			</column>
		</property>
		
		
		<many-to-one name="tjcjlx" class="org.pfw.framework.xtgl.domain.Dict">
			<column name="tjcjlx" length="32">
				<comment>特殊-残疾类型:视力残疾班,听力残疾班,言语残疾班,肢体残疾班,智力残疾班,精神残疾班,多重残疾班</comment>
			</column>
		</many-to-one>
		<many-to-one name="dqzt" class="org.pfw.framework.xtgl.domain.Dict">
			<column name="dqzt" length="32">
				<comment>当前状态</comment>
			</column>
		</many-to-one>
		<many-to-one name="sszy" class="org.pfw.framework.ywmk.domain.Zyxx">
			<column name="sszy" length="32">
				<comment>职教-所属专业</comment>
			</column>
		</many-to-one>
		<property name="sfxzxtz" type="java.lang.String">
			<column name="sfxzxtz" length="1">
				<comment>是否现代学徒制 1：是  0：否</comment>
			</column>
		</property>
		<property name="bz" type="java.lang.String">
			<column name="bz" length="100">
				<comment>备注</comment>
			</column>
		</property>
		<property name="byny" type="java.lang.String">
			<column name="byny" length="20">
				<comment>毕业年月</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>